[Unit]
Description=EngageMeter FastAPI app
After=network.target

[Service]
User=www-data
Group=www-data
WorkingDirectory=/path/to/engagemeter
ExecStart=/path/to/engagemeter/.venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app -b 127.0.0.1:8000
Restart=always

[Install]
WantedBy=multi-user.target
